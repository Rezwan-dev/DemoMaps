<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="#000">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Confirm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                app:fontFamily="@font/roboto" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/close_white_ic"
                android:padding="8dp"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/vertical_line"/>

                <TextView
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:text="Gulshan, Dhaka"
                    android:textColor="#000"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginBottom="18dp"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/vertical_line"/>

                <TextView
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:text="Shugondha, Cox's Bazar"
                    android:textColor="#000"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:paddingLeft="22dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            app:fontFamily="@font/roboto"
            android:text="Vehicle: Bus (AC) - 27 person"/>

        <TextView
            android:paddingLeft="22dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            app:fontFamily="@font/roboto"
            android:text="Distance: 360km"/>

        <TextView
            android:paddingLeft="22dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            app:fontFamily="@font/roboto"
            android:text="Time: 1st March 2019, 8:00 pm"/>


        <TextView
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"
            app:fontFamily="@font/roboto"
            android:text="Estimated Price"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/line"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BDT 10000"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            app:fontFamily="@font/roboto" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="8dp">

            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="46dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:layout_gravity="bottom|center_horizontal"
                app:cardBackgroundColor="#000"
                android:layout_marginBottom="2dp"
                android:id="@+id/fullBookingSubmitBtn">

                <TextView
                    android:paddingRight="56dp"
                    android:paddingLeft="56dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Place Order"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </FrameLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/discount_tv"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="-28dp"
        android:layout_width="120dp"
        android:layout_height="26dp"
        android:text="50% OFF"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:background="#DD3C3C"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:rotation="-45"/>

</android.support.v7.widget.CardView>


